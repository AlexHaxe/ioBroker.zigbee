{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": 0,
        "no-console": "off",
        "no-var": "error",
        "prefer-const": "error",
        "quotes": [
            2, 
            "single", 
            { 
                "avoidEscape": true, 
                "allowTemplateLiterals": true 
            }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-prototype-builtins": "off"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    }
}
